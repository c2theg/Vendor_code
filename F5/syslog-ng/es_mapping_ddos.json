            }
         },         
         "severity":{  
            "type":"integer"
         },
         "partition_name":{  
            "type":"text",
            "analyzer":"english",
            "fields":{  
               "raw":{  
                  "type":"text",
                  "index":"false"
               }
            }
         },
         "route_domain":{  
            "type":"integer"
         },
         "src_ip":{  
            "type":"ip"
         },
         "src_port":{  
            "type":"integer"
         },
         "vlan":{  
            "type":"text",
            "analyzer":"english",
            "fields":{  
               "raw":{  
                  "type":"text",
                  "index":"false"
               }
            }
         }





      }
